{
	"private": true,
	"name": "alpha",
	"description": "Front end demo of OME",
	"author": "David Sinclair",
	"email": "david.sinclair@pathway.com",
	"devDependencies": {
		"babel-core": "latest",
		"babelify": "latest",
		"bcryptjs": "latest",
		"browserify": "latest",
		"fastclick": "latest",
		"flux": "latest",
		"gulp": "latest",
		"gulp-autoprefixer": "latest",
		"gulp-babel": "latest",
		"gulp-if": "latest",
		"gulp-jshint": "latest",
		"gulp-sass": "latest",
		"gulp-uglify": "latest",
		"gulp-util": "latest",
		"joi": "latest",
		"jshint-stylish": "latest",
		"keymirror": "latest",
		"nodemon": "latest",
		"object-assign": "latest",
		"postcss-cli": "latest",
		"react": "latest",
		"react-pure-render": "latest",
		"react-router": "latest",
		"reqwest": "latest",
		"strictify": "latest",
		"velocity-animate": "latest",
		"vinyl-buffer": "latest",
		"vinyl-source-stream": "latest",
		"watchify": "latest",
		"when": "latest",
		"yargs": "latest"
	},
	"jshintConfig": {
		"esnext": true
	},
	"scripts": {
		"build:main:jshint": "jshint --reporter=node_modules/jshint-stylish scripts/.",
		"build:main:bundle": "browserify scripts/main.js -o scripts/main.bundle.js -x ./scripts/libs.js -t strictify -t babelify",
		"build:main:uglify": "uglifyjs scripts/main.bundle.js -c -o scripts/main.bundle.js",
		"build:main": "npm run build:main:jshint && npm run build:main:bundle && npm run build:main:uglify",
		"build:libs:jshint": "jshint scripts/libs.js",
		"build:libs:bundle": "browserify -r ./scripts/libs.js -o scripts/libs.bundle.js -t strictify",
		"build:libs:uglify": "uglifyjs scripts/libs.bundle.js -o scripts/libs.bundle.js",
		"build:libs": "npm run build:libs:jshint && npm run build:libs:bundle && npm run build:libs:uglify",
		"build:styles": "node-sass --stdout --output-style compressed styles/styles.scss | postcss -u autoprefixer -o styles/styles.css",
		"build": "npm run build:main && npm run build:libs && npm run build:styles",
		"watch": "nodemon -e js,scss -w scripts -w styles -i scripts/main.bundle.js -x 'npm run build:main:jshint && npm run build:main:bundle && npm run build:styles'",
		"gulp": ""
	}
}